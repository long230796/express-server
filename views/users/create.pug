extends ../layouts/common.pug

block content
	h1 create users

	if errors
		each error in errors
			.alert.alert-danger= error

	form(action="/users/create", method="POST", enctype="multipart/form-data")
		label(for="name") Name
		input#name(type="text" name="name" value=values ? values.name : "")
		label(for="password") password
		input#password(type="password" name="password" value=values ? values.password : "")
		button create	

		.form-group
			label(for='avatar') avatar
			input#avatar.form-control-file(type="file", name="avatar")

			button.btn.btn-primary(type='submit') Submit