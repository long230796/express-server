extends ../layouts/common.pug

block content
	if errors
		each error in errors
			.alert.alert-danger= error



	h1.pt-5 login 

	form(action='/auth/login', method='POST', )
		.form-group
			label(for='exampleInputEmail1') name
			input#exampleInputEmail1.form-control(type='text', aria-describedby='emailHelp', placeholder='Enter email', name='name', value=values ? values.name: '')
		.form-group
			label(for='exampleInputPassword1') Password
			input#exampleInputPassword1.form-control(type='password', placeholder='Password', name='password', value=values ? values.password : '')
		button.btn.btn-primary(type='submit') Submit
		
		
